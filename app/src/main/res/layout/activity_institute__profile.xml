<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    tools:context="com.example.user.aalsi_student.activity.Institute_ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/institute_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/institute_profile_img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/institute_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/institute_profile_img"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Delhi public School"
                android:textColor="#E50D5179"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ins_cut_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/institute_profile_img"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/institute_name"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ins_full_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/institute_profile_img"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/ins_cut_price"
                android:textColor="#E50D5179"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/ins_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ins_full_price"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorbackground" />

            <RatingBar
                android:id="@+id/video_disc_RatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/institute_name"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="3.5" />


            <TextView
                android:id="@+id/video_disc_reting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/institute_name"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/video_disc_RatingBar"
                android:padding="5dp"
                android:text="3.5"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/institute_name"
                android:layout_toRightOf="@+id/video_disc_reting_text"
                android:padding="5dp"
                android:text="(18,800)"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/totalStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_disc_RatingBar"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="21615"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_disc_RatingBar"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/totalStudent"
                android:padding="5dp"
                android:text="Students"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/institute_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/student"
                android:padding="10dp"
                android:text="Discription"
                android:textColor="#eb060606"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/institute_disc"
                android:padding="5dp"
                android:text="This is helpful but only seems to clip text based on number of chars. It would be nice if it was expandable/collapsable by number of lines" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/disc_text"
                android:padding="10dp"
                android:text="Course Detail:"
                android:textColor="#eb060606"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/institute_profile_detail_rel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/institute_relative"
            android:layout_margin="10dp"
            android:background="#fff"
            android:elevation="5dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/level_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#eb060606" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/level_img"
                android:paddingLeft="10dp"
                android:text="Level" />

            <TextView
                android:id="@+id/course_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textStyle="bold" />

            <View
                android:id="@+id/level_view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/level_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#F0060606" />

            <ImageView
                android:id="@+id/duration_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/level_view"
                android:layout_marginTop="10dp"
                android:background="#eb060606" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_img"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/duration_img"
                android:paddingLeft="10dp"
                android:text="Duration" />

            <TextView
                android:id="@+id/ins_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/level_img"
                android:layout_marginTop="10dp"
                android:text="$ Month"
                android:textStyle="bold" />

            <View
                android:id="@+id/duration_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/duration_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#F0060606" />

            <ImageView
                android:id="@+id/fees_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/duration_view"
                android:layout_marginTop="10dp"
                android:background="#eb060606" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/duration_img"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/fees_img"
                android:paddingLeft="10dp"
                android:text="Fees" />

            <TextView
                android:id="@+id/ins_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/duration_img"
                android:layout_marginTop="10dp"
                android:text="10500"
                android:textStyle="bold" />

            <View
                android:id="@+id/fees_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fees_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#F0060606" />

            <ImageView
                android:id="@+id/type_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/fees_view"
                android:layout_marginTop="10dp"
                android:background="#eb060606" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fees_img"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/duration_img"
                android:paddingLeft="10dp"
                android:text="Type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/fees_img"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textStyle="bold" />

            <View
                android:id="@+id/type_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/type_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#F0060606"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/include_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/type_view"
                android:layout_marginTop="10dp"
                android:background="#eb060606" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_img"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/include_img"
                android:paddingLeft="10dp"
                android:text="Include" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/type_img"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textStyle="bold" />

            <View
                android:id="@+id/include_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/include_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#F0060606"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/language_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/include_view"
                android:layout_marginTop="10dp"
                android:background="#eb060606" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/include_img"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/language_img"
                android:paddingLeft="10dp"
                android:text="Languages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/include_img"
                android:layout_marginTop="10dp"
                android:text="Hindi,English"
                android:textStyle="bold" />

            <View
                android:id="@+id/language_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/language_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#F0060606"
                android:padding="5dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/institute_profile_detail_rel_layout"
            android:padding="10dp"
            android:text="Services"
            android:textColor="#eb060606"
            android:textSize="17sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/service_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/services">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/institute_profile_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_recyclerView"
            android:layout_centerHorizontal="true">


            <Button
                android:id="@+id/institute_profile_button_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:clickable="true"
                android:text="Payment"
                android:textColor="@color/colorbackground" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_timing_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/institute_profile_button_layout"
            android:layout_margin="5dp"
            android:background="#f0cfd2de"
            android:elevation="5dp"
            android:onClick="course_timing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:text="Offline Class Details"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/side_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/online_course_timing_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/course_timing_layout"
            android:layout_margin="5dp"
            android:background="#f0cfd2de"
            android:elevation="5dp"
            android:onClick="online_courses_timing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:text="Conference Class Details"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/side_arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/online_course_timing_layout"
            android:padding="10dp"
            android:text="No.Of Students"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.HorizontalBarChart

            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/reviewText">

        </com.github.mikephil.charting.charts.HorizontalBarChart>

        <RelativeLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/barchart"
            android:padding="5dp">

            <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                tools:context=".MapActivity" />
        </RelativeLayout>


        <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/map_layout">-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="10dp"-->
        <!--android:text="Related Video"-->
        <!--android:textColor="#eb060606"-->
        <!--android:textSize="17dp"-->
        <!--android:textStyle="bold" />-->

        <!--</RelativeLayout>-->
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
