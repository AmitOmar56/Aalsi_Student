<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/boy"
        android:padding="5dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Note *"
            android:textColor="#F5AE1E0B"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Aalsi Students have two choice Related to this Course" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="20dp">

        <Button
            android:id="@+id/onlineVideoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#79a209df"
            android:onClick="login1"
            android:padding="5dp"
            android:text="Online Video"
            android:textColor="#cccccc"
            android:shadowColor="#79261C"
            android:shadowRadius="@integer/google_play_services_version"/>

        <Button
            android:id="@+id/conferenceBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#79a209df"
            android:padding="5dp"
            android:text="Conference "
            android:textColor="#cccccc"
            android:elevation="6dp"/>
    </LinearLayout>
</LinearLayout>