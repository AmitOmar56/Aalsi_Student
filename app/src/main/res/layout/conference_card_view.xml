<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/conference_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="Topic - "
                android:textColor="#E5111112"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/conference_class_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/topic_name"
                android:padding="5dp"
                android:text="Php"
                android:textColor="#E50D5179"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/date_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_class_topic"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="Date - "
                android:textColor="#E5111112"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/conference_class_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_class_topic"
                android:layout_toRightOf="@id/date_name"
                android:padding="5dp"
                android:text="10-1-2017"
                android:textColor="#E50D5179" />

            <TextView
                android:id="@+id/conference_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/conference_class_topic"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="2:00pm"
                android:textColor="#E50D5179" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>